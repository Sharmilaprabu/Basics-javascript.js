public class MultipleCounter {

    public static int countMultiples(int[] array, int multiple) {
        // Validate input
        if (multiple <= 0) {
            throw new IllegalArgumentException("Multiple must be greater than zero.");
        }

        int count = 0;
        
        // Iterate through the array and count multiples
        for (int num : array) {
            if (num % multiple == 0) {
                count++;
            }
        }
        
        return count;
    }

    public static void main(String[] args) {
        int[] array = {3, 5, 10, 15, 20, 25, 30};
        int multiple = 5;

        int count = countMultiples(array, multiple);
        System.out.println("Number of multiples of " + multiple + " in the array is: " + count);
    }
}
